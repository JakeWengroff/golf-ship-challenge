<h1>Products</h1>
<div class="well">
	<%= link_to "New Product", api_products_path, class: "btn btn-primary" %>
</div>

<% if flash[:notice] %>
	<div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Product Type</th>
			<th>Length</th>
			<th>Width</th>
      <th>Height</th>
			<th>Weight</th>
		</tr>
	</thead>
	<tbody>
		<% if @products.size == 0 %>
			<tr>
				<td colspan="6">No products found.</td>
			</tr>
		<% else %>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= product.type %></td>
					<td><%= product.length %></td>
					<td><%= product.width %></td>
          <td><%= product.height %></td>
          <td><%= product.weight %></td>
					<td>
						<%= link_to "Edit", edit_product_path(product), class: "btn btn-default" %>
					</td>
					<td>
						<%= button_to "Delete", product, method: :delete, data: { confirm: "Are you sure you wish to delete #{product.name} for #{product.type}?" }, class: "btn btn-danger" %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
